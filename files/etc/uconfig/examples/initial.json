{
	"radios": {
	},

	"interfaces": {
		"wan": {
			"role": "upstream",
			"services": [ "ssh", "mdns", "webui" ],
			"ports": {
				"wan*": "auto"
			},
			"ipv4": {
				"addressing": "dynamic"
			},
			"ipv6": {
				"addressing": "dynamic"
			}
		},
		"lan": {
			"role": "downstream",
			"services": [ "ssh", "mdns", "webui" ],
			"ports": {
				"lan*": "auto"
			},

			"ipv4": {
				"addressing": "static",
				"subnet": "192.168.11.1/24",
				"dhcp-pool": {
					"lease-first": 10,
					"lease-count": 100,
					"lease-time": "6h"
				}
			},

			"ipv6": {
				"addressing": "static",
				"dhcpv6": {
					"mode": "hybrid"
				}
			}
		}
	},

	"services": {
		"ssh": {
			"port": 22,
            "authorized-keys": [
				"ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAILp4HgDDRQYOp1xXPTUkqv83dZw+DGIj5jZdBzR2u57Y test2"
			],
            "password-authentication": false
		}
	}
}